{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": ["es5", "es6", "dom"],
    "jsx": "react",
    "types": ["node", "jest"],
    "declarationDir": "dist",
    "sourceRoot": "src",
    "rootDir": "src",
    "outDir": "dist"
  },
  "exclude": ["node_modules", "example", "**/__tests__", "coverage", "dist"]
}
