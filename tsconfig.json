{
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__", "**/node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "incremental": false,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "es5",
    "types": ["jest"],
    "lib": ["es2017", "dom"]
  },
}
